<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rha.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.fiuba.mascota.MyApplication">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="com.fiuba.mascota.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.fiuba.mascota.LoginActivity" android:theme="@style/AppTheme.Dark" />

        <activity
            android:name="com.fiuba.mascota.DispatchActivity"
            android:noHistory="true" >
        </activity>

        <activity
            android:name="com.fiuba.mascota.AdopcionActivity"
            android:label="@string/title_activity_adopcion" android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="com.fiuba.mascota.PerdidoActivity"
            android:label="@string/title_activity_perdido" android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="com.fiuba.mascota.AdopcionPublicarActivity"
            android:label="@string/title_activity_adopcion_publicar" android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="com.fiuba.mascota.AdopcionBuscarActivity"
            android:label="@string/title_activity_adopcion_buscar" android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="com.fiuba.mascota.PerdidoPublicarActivity"
            android:label="@string/title_activity_perdido_publicar" android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="com.fiuba.mascota.PerdidoBuscarActivity"
            android:label="@string/title_activity_perdido_buscar" android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="com.fiuba.mascota.RegitrarDatosCuentaActivity"
            android:label="@string/title_activity_regitrar_datos_cuenta" android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="com.fiuba.mascota.RegistrarDatosPersonalesActivity"
            android:label="@string/title_activity_registrar_datos_personales" android:theme="@style/AppTheme.Dark">
        </activity>
        <activity
            android:name="com.fiuba.mascota.HomeActivity"
            android:label="@string/title_activity_home" android:theme="@style/AppTheme.Dark">
        </activity>
    </application>

</manifest>
