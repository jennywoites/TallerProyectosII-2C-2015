<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Mascotas"
        android:textSize="24sp"
        android:layout_margin="8dp"
        android:layout_below="@id/toolbar"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aquí podrás ver todas tus mascotas publicadas, ya sean para adoptar o tus mascotas perdidas."
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_below="@id/title"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:elevation="@dimen/elevation"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Adopciones"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical|center_horizontal" />
        <ImageButton
            android:id="@+id/adoptions_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_adoption_white"
            android:background="@color/ColorPrimary"
            android:text="Mis mascotas para adoptar"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Perdidas"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical|center_horizontal" />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Mis mascotas perdidas"
            android:src="@drawable/ic_action_search"
            android:background="@color/ColorPrimary"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"/>

    </LinearLayout>

</RelativeLayout>