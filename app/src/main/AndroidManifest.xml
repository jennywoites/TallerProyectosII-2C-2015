<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.uba.fi.nicodiaz.mascota" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DispatchActivity"
            android:noHistory="true" >
        </activity>
        <activity android:name=".LoginActivity" >
        </activity>
        <activity android:name=".RegistrarDatosCuentaActivity" >
        </activity>
        <activity
            android:name=".AdopcionActivity"
            android:label="@string/title_activity_adopcion" >
        </activity>
        <activity
            android:name=".AdopcionPublicarActivity"
            android:label="@string/title_activity_agregar_adopcion"
            android:parentActivityName=".AdopcionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.uba.fi.nicodiaz.mascota.AdopcionActivity" />
        </activity>
        <activity
            android:name=".AdopcionBuscarActivity"
            android:label="@string/title_activity_buscar_adopcion"
            android:parentActivityName=".AdopcionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.uba.fi.nicodiaz.mascota.AdopcionActivity" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
    </application>

</manifest>
